<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>login</title>
	<style type="text/css">
		.login{
			border:2px double grey;
			margin: 300px 100px;
			background: lightgrey;
			opacity: 0.9;
		}
	</style>
</head>
<body>
	<%- include("header") %>
	<div class="login container text-center">
		<h3>登录界面</h3>
		<form action="/login/check" method="post" class="form-horizontal" >
			<div class="form-group">
				<label class="col-md-2 col-md-offset-2 col-xs-4 control-label" for="uname">用户名:*</label>
				<div class="col-md-6">
					<input type="text" class="col-md-8 col-xs-8" id="uname" name="uname" required="required">
				</div>

			</div>

			<div class="form-group">
				<label for="pw" class="col-md-2 col-md-offset-2 col-xs-4 control-label">密码:*</label>
				<div class="col-md-6">
					<input type="password" id="pw" class="col-md-8 col-xs-8" name="pw" required="required">
				</div>
			</div>



			<div class="form-group">
				<div class="col-md-5 col-md-offset-2">
					<input class="btn btn-default" type="submit" value="登录">
				</div>
			</div>
		</form>
	</div>
	<%- include("footer") %>
</body>
</html>